<html>

    <head></head>

    <body>
        <h1>Edit Todo</h1>    
        
        <br>
        
        <form action="/users/todo/update" method="POST">
            
          <input type="hidden" name="id" value="{{id}}">
            
          <div class="form-group">
            <label for="username">Username: </label>
            <input class="form-control" value="{{user.username}}">
          </div>
            
          <div class="form-group">
            <label for="todo">Todo: </label>
            <input class="form-control" name="todo" placeholder="todo" value="{{todo}}">
          </div>
            
          <div class="checkbox">
            <label><input type="checkbox" name="isDone" {{#if isDone}}checked{{/if}}> Done</label>
          </div>
            <br>
            
          <button type="submit" class="btn btn-default">Update Todo</button>
            
        </form>
        
    </body>
</html>