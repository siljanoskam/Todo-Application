<html>

    <head></head>

    <body>
        <h1>Create new Todo</h1>    
        
        <br>
        
        {{#if errors}}
          {{#each errors}}
            <div class="alert alert-danger">{{msg}}</div>
          {{/each}}
        {{/if}}
        
        <form action="/users/addTodo" method="POST">
            
          <div class="form-group">
            <label for="username">Username: </label>
            <input class="form-control" value="{{user.username}}">
          </div>
            
          <div class="form-group">
            <label for="todo">Todo: </label>
            <input class="form-control" name="todo" placeholder="todo" value="{{todo}}">
          </div>
            
          <div class="checkbox">
            <label><input type="checkbox" name="isDone" {{#if isDone}}checked{{/if}}> Done</label>
          </div>
            
            <br>
            
          <button type="submit" class="btn btn-default">Add Todo</button>
        </form>
        
    </body>
</html>